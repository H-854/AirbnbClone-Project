<% layout("/layouts/boilerplate.ejs") %>
  <body>
    
    <div class="row mt-3">
      <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
      <form method="POST" action="/listings">
        <div class="mb-3 ">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="Enter Title" type="text" id="title" class="form-control"/>
        </div>
        
        <div class="mb-3">
          <label for="Description" class="form-label">Description</label>
          <textarea 
            name="listing[description]"
            placeholder="Enter Description"
            class="form-control"
            id="Description"
          ></textarea>
        </div>
        
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input
          name="listing[image]"
          placeholder="Enter image URL/Link"
          type="text"
          id="image"
          class="form-control"
          />
        </div>
  
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="Price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="6000" type="number" id="Price" class="form-control"/>
          </div>
    
          <div class="mb-3 col-md-8">
            <label for="Country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="India" type="text" id="Country" class="form-control"/>
          </div>
        </div>
  
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            placeholder="Manali, Himachal Pradesh"
            type="text"
            id="location"
            class="form-control"
          />
        </div>
        <br><br>
      <button class="btn btn-dark mb-3" style="background-color: #fe424d; border: none;">Add</button>
      <br><br><br>
      </form>
      </div>
    </div>
  </body>